#!/usr/bin/env zsh

#### Basically same as dump-schema, but for the db with auth schema

echo "Removing old schema dump if it exists!!"
rm -f `dirname $0`/../fixtures/auth_schema_dump.sql

echo ""
echo ""
echo "Dumping the new schema"
docker-compose exec db pg_dump -s -U postgres -d column_data_auth > `dirname $0`/../fixtures/auth_schema_dump.sql